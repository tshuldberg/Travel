<body class="posts-body">

    <%- include('../partials/header') %>


    <a id="new-post" href="/users/<%= user._id %>/posts/new" class="waves-effect waves-light btn-large"><i
            class="far fa-edit right"></i>New Post</a>



    <% user.posts.forEach(function(p) { %>

    <div class="posts">
        <div class="row">
            <div class="col s12 m7">
                <div class="card blue-grey darken-1">
                    <div class="card-image">
                        <img
                            src="https://images.unsplash.com/photo-1516738901171-8eb4fc13bd20?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1950&q=80">
                        <span class="card-title"> <%= p.title %></span>
                    </div>
                    <div class="card-content">
                        <div><%= p.textContent %></div>
                        <div><%= p.datePosted %></div>
                        <div>Where Ya Goin! <%= p.destination %></div>
                    </div>
                    <div class="card-action">
                        <a href="/users/<%= user._id %>/posts/<%= p._id %>">Edit Post</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <%  }) %>

</body>